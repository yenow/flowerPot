<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="magazine">
	<!-- 매거진 리스트 불러오기 -->
	<insert id="insertMagazine">
		insert into f_magazine (mgno,<!--  mno,-->title,content,category,UUIDName,originalName,rootfolder,regdate) values 
		(mgno_seq.nextval,<!--#{mno},-->#{title}, #{content}, #{category}, #{UUIDName}, #{originalName}, #{rootfolder}, sysdate)
	</insert>
	
	<!-- 매거진 리스트 가져오기 -->
	<select id="selectMagazineList" resultType="com.flowerPot.vo.MagazineVo">
		 <![CDATA[ select * from (select m.*,rownum as rnum from f_magazine m order by mgno desc) where rnum >  #{amount}*(#{pageNum}-1) and rnum <= #{amount}*#{pageNum} and category= #{amount} ]]>
		
	</select>
	
	<!-- 매거진 내용 -->
	<select id="selectMagzineCont" resultType="com.flowerPot.vo.MagazineVo">
		select * from f_magazine where mgno = #{mgno}
	</select>
	
	<!-- 매거진 삭제 -->
	<delete id="deleteMagazine">
		delete from f_magazine where mgno = #{mgno}
	</delete>
	
	<update id="updateMagazine">
		update f_magazine set title = #{title},  content = #{content} where mgno = #{mgno}
	</update>
	
	<select id="getTotalCount" resultType="int">
		select count(*) from f_magazine where category = #{category} 
	</select>
</mapper>
